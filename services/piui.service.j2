[Unit]
Description=PIUI
Wants=nginx.service

[Service]
Environment=PYTHONPATH={{ scripts.piui.pypath }}
ExecStart={{ scripts.piui.dir }}/{{ scripts.piui.bin }} {{ connection }}
WorkingDirectory={{ scripts.piui.dir }}
User=pi

Restart=on-failure
RestartSec=10
TimeoutStopSec=5

[Install]
WantedBy=multi-user.target
